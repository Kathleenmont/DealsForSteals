<div class="container">
    <div class="jumbotron">
        <h1>Share Your Deal!</h1>
    </div>
</div>

<form  enctype="multipart/form-data" id="postForm" method="POST">
    <label class="label" for="typeOf">
        <h3>Type of Deal</h3>
    </label>
    <div class="form-group">
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" class="custom-control-input typeOf" id="meal" name="typeOf" value="meal">
            <label class="custom-control-label" for="meal">Meal Under $10</label>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" class="custom-control-input typeOf" id="snack" name="typeOf" value="snack">
            <label class="custom-control-label" for="snack">Snack under $5</label>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" class="custom-control-input typeOf" id="treat" name="typeOf" value="treat">
            <label class="custom-control-label" for="treat">Treat Under $5</label>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" class="custom-control-input typeOf" id="drink" name="typeOf" value="drink">
            <label class="custom-control-label" for="drink">Drink under $5</label>
        </div><br><br>

        <div class="form-group">
            <label for="place-name">
                <h3>Name of Place:</h3>
            </label>
            <input type="text" class="form-control" id="place" name="restaurant">
        </div>
        <div class="form-group">
            <label for="item-name">
                <h3>Name of Deal Item:</h3>
            </label>
            <input type="text" class="form-control" id="item" name="item">
        </div>
        <div class="form-group">
            <label for="price">
                <h3>Item Price:</h3>
            </label>
            <input type="number" class="form-control" id="price" name="price" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency">
        </div>
        <h3>Why Is This a Great Deal?</h3>
        <div class="form-check-inline">
            <label class="form-check-label">
                <input type="checkbox" name="why" class="form-check-input why" value="delicious">So Delicious!
            </label>
        </div>
        <div class="form-check-inline">
            <label class="form-check-label">
                <input type="checkbox" name="why" class="form-check-input why" value="so-much">So Much for the Price!
            </label>
        </div>
        <div class="form-check-inline">
            <label class="form-check-label">
                <input type="checkbox" name="why" class="form-check-input why" value="healthy">Healthy Deal!
            </label>
        </div>
        <div class="form-check-inline">
            <label class="form-check-label">
                <input type="checkbox" name="why" class="form-check-input why" value="cool">Cool Place!
            </label>
        </div><br><br>
        <div class="form-group">
            <label for="tell-more">
                <h3>Tell us a little more about why this is good deal (optional):</h3>
            </label>
            <input type="text" class="form-control" id="tell-more" name="comments">
        </div>
        <div id="imgChoice">
            <div>Would you like to upload or take a picture?</div>
            <button id="uploadIMG">Upload</button>
            <button id="takeIMG">Take Picture</button>
        </div>
        <div class="form-group img" id="uploadDiv">
            <label for="example-img">
                <h3>Choose Photo</h3>
            </label><br>
            <input type="file" accept="image/*" id="example-img" name="userPhoto" capture="environment">
            <img id="uploadMyImg" src="//:0" alt="your image" width="200">
        </div>
        <section id="camera">
            <!-- Camera sensor -->
            <h3>Capture image from Cam</h3>
            <canvas id="camera--sensor"></canvas>
            {{!-- <input type="file" accept="image/*" capture="environment" placeholder="Take a Photo"> --}}
            <!-- Camera view -->
            <video id="camera--view" autoplay playsinline></video>
            <!-- Camera trigger -->
            <button id="camera--trigger" class="btn btn-primary">Take a picture</button>
        </section>
        <button type="submit" class="btn btn-primary" id="uploads-submit">Submit</button>
    </div>
</form>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>