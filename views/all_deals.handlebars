
{{!-- header --}}
<a href="/">
    <div class="container header" id="login-header">
        <div class="jumbotron">
            <h1 class="textClipAnim" id="uploads-h1">Search Deals</h1>
            <div class="textAnimation"></div>
        </div>
    </div>
    </a>
{{!-- nav tabs --}}
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="/"><i class="fa fa-home"></i> HOMEPAGE</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/newpost"><i class="fa fa-folder"></i> UPLOAD</a>
  </li>

  
 {{!-- dropdown filter search --}}
  <li class="nav-item">
    <div class="dropdown">
      <a class="btn dropdown-toggle text-dark" type="button" id="dropdownMenu2" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        Filter Results
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
        <button class="dropdown-item" type="button" onClick="getMeals()">Meal</button>
        <button class="dropdown-item" type="button" onClick="getSnacks()">Snack</button>
        <button class="dropdown-item" type="button" onClick="getTreats()">Treat</button>
        <button class="dropdown-item" type="button" onClick="getDrinks()">Drink</button>
        <button class="dropdown-item" type="button" onClick="getAll()">All</button>
      </div>
    </div>
  </li>
</ul>

{{!-- card container for posted deals --}}
<div id="container-cards">

  {{#each posts}}
  <a href="{{this.yelpUrl}}" target="_blank">
    <div class="card">
      <img class="card-img-top" src="{{this.photo}}" alt="" height="200">
      <div class="card-body">
        <p><span class="label card-text"><b>Item:</b></span> {{this.item}}</p>
        <p><span class="label card-text"><b>Price: $</b></span> {{this.price}}</p>
        <p><span class="label card-text"><b>Restaurant:</b></span> {{this.restaurant}}</p>
        <p><span class="label card-text"><b>Address:</b></span> {{this.restAdd}}</p>
        <p><span class="label card-text"><b></b></span> {{this.comments}}</p>
      </div>
  </a>
</div>
{{/each}}
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

<script>

  //display/hide filter buttons
  $("#filterOptions").css("display", "none");
  $("#filterBtn").click(function () {
    $("#filterBtn").css("display", "none");
    $("#filterOptions").css("display", "inline-block");
  });
  
  //functions to filter search results
  function getMeals() {
    location.assign("/search/meals");
  }
  function getSnacks() {
    location.assign("/search/snacks");
  }
  function getTreats() {
    location.assign("/search/treats");
  }
  function getDrinks() {
    location.assign("/search/drinks");
  }
  function getAll() {
    location.assign("/search");
  }
</script>