<button id="filterBtn">Filter Results</button>
<div id="filterOptions">
  <input type="radio" id="mealRadio" name="filter" onClick="getMeals()">Meal
  <input type="radio" id="snackRadio" name="filter" onClick="getSnacks()">Snack
  <input type="radio" id="treatRadio" name="filter" onClick="getTreats()">Treat
  <input type="radio" id="drinkRadio" name="filter" onClick="getDrinks()">Drink
    <input type="radio" id="allRadio" name="filter" onClick="getAll()">All
</div>
<div id="container-cards">
  {{#each posts}}
