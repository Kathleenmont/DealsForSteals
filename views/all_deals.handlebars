<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script>
  //display/hide filter buttons
  $("#filterOptions").css("display", "none");
  $("#filterBtn").click(function () {
    $("#filterBtn").css("display", "none");
    $("#filterOptions").css("display", "inline-block");
  });
function getMeals() {
  location.assign("/search/meals");
}
function getSnacks() {
  location.assign("/search/snacks");
}
function getTreats() {
